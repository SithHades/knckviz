---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Placeholder Visualization">
	<h1>Placeholder Visualization</h1>
	<p>This is where a Reinforcement Learning or Monte Carlo simulation visualization would go.</p>

	<div class="canvas-container">
        <!-- Canvas or SVG for visualization would go here -->
        <div class="placeholder-box">
            Visualization Area
        </div>
	</div>

    <style>
        .canvas-container {
            width: 100%;
            height: 400px;
            background: #222;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 8px;
            margin: 2rem 0;
        }
        .placeholder-box {
            color: #666;
            font-size: 1.5rem;
        }
    </style>
</Layout>
