---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="knckviz - Visualizations">
	<h1>Visualizations</h1>
	<p>Here you will find a collection of algorithm visualizations.</p>

	<div class="viz-grid">
		<div class="viz-card">
			<h3>Placeholder Viz</h3>
			<p>A placeholder for future visualizations.</p>
			<a href="/viz/placeholder">View</a>
		</div>
        <!-- Add more visualization cards here -->
	</div>

    <style>
        .viz-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }
        .viz-card {
            border: 1px solid #333;
            padding: 1.5rem;
            border-radius: 8px;
            background: #1e1e1e;
        }
        .viz-card h3 {
            margin-top: 0;
        }
        .viz-card a {
            display: inline-block;
            margin-top: 1rem;
            color: var(--accent);
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</Layout>
